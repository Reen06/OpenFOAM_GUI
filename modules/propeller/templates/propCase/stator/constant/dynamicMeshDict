// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Dynamic mesh for rotating propeller zone
// Using solidBody motion for rigid rotation of the rotor zone

dynamicFvMesh   dynamicMotionSolverFvMesh;

motionSolverLibs (fvMotionSolvers);

motionSolver    solidBody;

solidBodyMotionFunction rotatingMotion;

cellZone        rotorCells;

rotatingMotionCoeffs
{
    // Rotation axis origin
    origin      (0 0 0);
    
    // Rotation axis direction (Z-axis)
    axis        (0 0 1);
    
    // Angular velocity in rad/s
    // 1500 RPM = 1500 * 2*pi/60 = 157.08 rad/s
    omega       157.08;
}

